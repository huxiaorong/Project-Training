<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_review_return"
            android:src="@drawable/reviewreturn"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_question"
            android:text="文本"
            android:textSize="33sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/rg_tingyinxuanzi"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rd_answer1"
                android:button="@null"
                android:background="@drawable/optionbackground"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:checked="true"
                android:text="按钮一"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20dp"/>

            <RadioButton
                android:id="@+id/rd_answer2"
                android:button="@null"
                android:background="@drawable/optionbackground"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="按钮二"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_marginTop="15dp"/>

            <RadioButton
                android:id="@+id/rd_answer3"
                android:button="@null"
                android:background="@drawable/optionbackground"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="按钮三"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:textSize="20dp"/>

            <RadioButton
                android:id="@+id/rd_answer4"
                android:button="@null"
                android:background="@drawable/optionbackground"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="按钮四"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_marginTop="15dp"/>
        </RadioGroup>


    </LinearLayout>




</LinearLayout>